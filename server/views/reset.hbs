<html class="bg-wrapper signup-bg">
    <div class="container-login">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default panel-transparent">
                <div class="panel-heading">
                    <h3>RESET YOUR PASSWORD</h3>
                </div>
                <div class="panel-body">
                    {{#if message.success }}
                    <div class="alert alert-success">
                        {{message.success}}
                    </div>
                    {{/if}}
                    {{#if message.error }}
                    <div class="alert alert-danger">
                        {{message.error}}
                    </div>
                    {{/if}}
                    {{#if message.info }}
                    <div class="alert alert-info">
                        {{message.info}}
                    </div>
                    {{/if}}
                    {{#unless message.success }}
                    <form id="resetPassword" name="resetPassword" method="post">
                        <div class="form-group">
                            <label for="password">New Password </label>
                            <input type="password" class="form-control" name="password" placeholder="Enter New Password" required>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password </label>
                            <input type="password" class="form-control" name="confirmPassword" placeholder="Enter to Confirm Password" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg" id="btn-resetPassword">Update Password</button>
                    </form>
                    {{/unless}}
                </div>

            </div>
        </div>
    </div>

</html>
